#!/usr/bin/bash
HOSTNAME="d4c_controller"; export HOSTNAME
exec 0</dev/null
exec>>/root/d4c/appd.log 2>&1 # symlink to /tmp/appd.log ?
(echo; echo; echo ################ REBOOT #################; echo $0 start at `date`)

cd /root/d4c; setsid /root/d4c/appd.sh & # starts infinite loop
